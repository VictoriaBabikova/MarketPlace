{% extends 'base.html.twig' %}
{% block title %}<title>profile</title>{% endblock %}
{% block body %}
<body class="Site">
{# открытие тега header происходит в base.html.twig #}
  </header>
  <div class="Middle Middle_top">
    <div class="Middle-top">
      <div class="wrap">
        <div class="Middle-header">
          <h1 class="Middle-title">Профиль</h1>
          <ul class="breadcrumbs Middle-breadcrumbs">
            <li class="breadcrumbs-item"><a href="{{path('app_homepage')}}">Главная</a></li>
            <li class="breadcrumbs-item"><a href="{{path('app_account')}}">Личный кабинет</a></li>
            <li class="breadcrumbs-item breadcrumbs-item_current"><span>Профиль</span></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="Section Section_column Section_columnLeft">
      <div class="wrap">
        <div class="Section-column">
          <div class="Section-columnSection">
            <header class="Section-header">
              <strong class="Section-title">Навигация</strong>
            </header>
            <div class="Section-columnContent">
              <div class="NavigateProfile">
                <ul class="menu menu_vt">
                  <li class="menu-item_ACTIVE menu-item"><a class="menu-link" href="{{path('app_account')}}?phone={{user.phone}}">Личный кабинет</a></li>
                  <li class="menu-item"><a class="menu-link" href="{{path('app_profile')}}">Профиль</a></li>
                  <li class="menu-item"><a class="menu-link" href="{{path('app_historyorder')}}">История заказов</a></li>
                  <li class="menu-item"><a class="menu-link" href="{{path('app_historyview')}}">История просмотра</a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="Section-content">
          <div class="Profile">
          
          {{ form_start(profileForm, {'attr': {'class': 'form Profile-form'}}) }}
              <input type="hidden" name="token" value="{{ csrf_token('upload') }}" />
                <div class="row">
                    <div class="row-block">
                        <div class="form-group">
                          <label class="form-label" for="avatar">Аватар
                          </label>
                          <div class="Profile-avatar Profile-avatar_noimg">
                            <div class="Profile-img">
                            {% if user.avatar is not null %}
                              <img src="{{asset(user.avatar)}}"/>
                            {% endif %}
                            </div>
                            {{ form_row(profileForm.avatar, {
                                label: 'Выберите аватар',
                                label_attr: {'class': 'Profile-fileLabel'}
                            }) }}
                          </div>
                        </div>
                         <div class="form-group">
                            {{ form_row(profileForm.name, {
                                label: 'ФИО',
                                label_attr: {'class': 'form-label'}
                            }) }}
                        </div>
                      </div>
                      <div class="row-block">
                        <div class="form-group">
                            {{ form_row(profileForm.phone, {
                                label: 'Телефон',
                                label_attr: {'class': 'form-label'}
                            }) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(profileForm.email, {
                                label: 'E-mail',
                                label_attr: {'class': 'form-label'}
                            }) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(profileForm.plainPassword, {
                                label: 'Пароль',
                                label_attr: {'class': 'form-label'},
                            }) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(profileForm.replyPassword, {
                                label: 'Подтверждение пароля',
                                label_attr: {'class': 'form-label'}
                            }) }}
                              
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn_success">Сохранить</button>
                        </div>
                        {% if message %}
                          <div class="Profile-success">{{ message }}</div>
                        {% endif %}
                    </div>
                </div>
            {{ form_end(profileForm) }}  
          </div>
        </div>
      </div>
    </div>
  </div>
</body></html>
{% endblock %}