{% extends 'base.html.twig' %}
{% block title %}<title>login-in</title>{% endblock %}
{% block body %}
<body class="Site">
{# открытие тега header происходит в base.html.twig #}
  </header>
  <div class="Middle Middle_top">
    <div class="Middle-top">
      <div class="wrap">
        <div class="Middle-header">
          <h1 class="Middle-title">Авторизация</h1>
          <ul class="breadcrumbs Middle-breadcrumbs">
            <li class="breadcrumbs-item"><a href="{{path('app_homepage')}}">Главная</a></li>
            <li class="breadcrumbs-item breadcrumbs-item_current"><span>Авторизация</span></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="Section">
      <div class="wrap">
        <form class="form Authorization" action="#" method="post">
          <div class="row">
            <div class="row-block">
              <div class="form-group">
                <label class="form-label" for="phone">Телефон</label>
                <input class="form-input" id="phone" name="phone" type="text" placeholder="+70000000000"/>
              </div>
              <div class="form-group">
                <label class="form-label" for="password">Пароль</label>
                <input class="form-input" id="password" name="password" type="password" placeholder="Ваш пароль"/>
              </div>
              <div class="form-group">
                  <button class="btn btn_primary" type="submit">Войти</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</body></html>
{% endblock %}