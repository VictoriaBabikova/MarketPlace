{% extends 'base.html.twig' %}
{% block title %}<title>log-in</title>{% endblock %}
{% block body %}
<body class="Site">
{# открытие тега header происходит в base.html.twig #}
  </header>
  <div class="Middle Middle_top">
    <div class="Middle-top">
      <div class="wrap">
        <div class="Middle-header">
          <h1 class="Middle-title">Авторизация</h1>
          <ul class="breadcrumbs Middle-breadcrumbs">
            <li class="breadcrumbs-item"><a href="{{path('app_homepage')}}">Главная</a></li>
            <li class="breadcrumbs-item breadcrumbs-item_current"><span>Авторизация</span></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="Section">
      <div class="wrap">
        <form class="form Authorization" action="#" method="post">
          <div class="row">
            <div class="row-block">
            {% if app.user %}
              <div class="mb-3">
                  Вы уже вошли в систему как {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
              </div>
            {% endif %}
              <div class="form-group">
                <label class="form-label" for="phone">Телефон</label>
                <input class="form-input" value="{{ last_username }}" id="phone" name="phone" type="text" autocomplete="username" required autofocus placeholder="+70000000000"/>
              </div>
              <div class="form-group">
                <label class="form-label" for="password">Пароль</label>
                <input class="form-input" id="password" name="password" type="password" autocomplete="current-password" placeholder="Ваш пароль"/>
                {% if error %}
                  <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
              {% endif %}
              </div>
              <div class="form-group">
                <a href="{{path('app_forgot_password_request')}}">Забыли пароль?</a>
              </div>
              <div class="form-group">
                  <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                  <button class="btn btn_primary" type="submit">Войти</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</body></html>
{% endblock %}