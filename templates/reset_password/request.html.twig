{% extends 'base.html.twig' %}
{% block title %}<title>reset-password</title>{% endblock %}
{% block body %}
<body class="Site">
{# открытие тега header происходит в base.html.twig #}
  </header>
  <div class="Middle Middle_top">
    <div class="Middle-top">
      <div class="wrap">
        <div class="Middle-header">
          <h1 class="Middle-title">Регистрация</h1>
          <ul class="breadcrumbs Middle-breadcrumbs">
            <li class="breadcrumbs-item"><a href="{{path('app_homepage')}}">Главная</a></li>
            <li class="breadcrumbs-item breadcrumbs-item_current"><span>Регистрация</span></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="Section">
        <div class="wrap">
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    

    {{ form_start(requestForm, {'attr': {'class': 'form Authorization'}}) }}
        <h1>Сбросить пароль</h1>
        <div class="row">
            <div class="row-block">
                <div class="form-group">
                    {{ form_row(requestForm.email) }}
                </div>
                <div class="form-group">
                    <small>
                        Enter your email address and we will send you a
                        link to reset your password.
                    </small>
                </div>

                <div class="form-group">
                    <button class="btn btn_primary">Отправить ссылку для сброса пароля</button>
                </div>
                    </div>
                </div>
            {{ form_end(requestForm) }}
         </div>
    </div>
  </div>
</body></html>
{% endblock %}
