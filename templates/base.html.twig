{% block head %}
<head>
{% block title %} {% endblock %}
  <meta name="description" content="Товарный агрегатор Megano">
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">
  <link href="{{asset('build/images/favicon.ico')}}" rel="shortcut icon">
</head>

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% endblock %}

{% block header %}
  <header class="Header">
    <div class="ControlPanel">
      <div class="wrap">
        <div class="row ControlPanel-row">
          <div class="row-block">
            <div class="row ControlPanel-rowSplit">
              <div class="row-block"><a class="ControlPanel-title" href="{{ path('app_sale') }}">Скидки</a>
              </div>
              <div class="row-block hide_700"><span class="ControlPanel-title">Мы в соцсетях</span>
                <ul class="menu menu_img menu_smallImg ControlPanel-menu">
                  <li class="menu-item"><a class="menu-link" href="#"><img src="{{asset('build/images/icons/socialHeader/fb.svg')}}" alt="fb.svg"/></a></li>
                  <li class="menu-item"><a class="menu-link" href="#"><img src="{{asset('build/images/icons/socialHeader/tw.svg')}}" alt="tw.svg"/></a></li>
                  <li class="menu-item"><a class="menu-link" href="#"><img src="{{asset('build/images/icons/socialHeader/in.svg')}}" alt="in.svg"/></a></li>
                </ul>
              </div>
            </div>
          </div>
          <nav class="row-block">
            <div class="row ControlPanel-rowSplit">
              <div class="row-block">
              {% if is_granted('ROLE_USER') %}
                <a class="ControlPanel-title" href="{{path('app_profile')}}">Профиль</a>&nbsp;/&nbsp;
                <a class="ControlPanel-title" href="{{path('app_logout')}}">Выйти</a>
              {% else %}
                <a class="ControlPanel-title" href="{{path('app_login')}}">Войти</a>&nbsp;/&nbsp;<a class="ControlPanel-title" href="{{path('app_register')}}">Регистрация</a>
              {% endif %}
              </div>
            </div>
          </nav>
        </div>
      </div>
      
    </div>
    <div class="wrap">
      <div class="row Header-rowMain">
        <div class="row-block Header-logo"><a class="logo" href="{{ path('app_homepage') }}"><img class="logo-image" src="{{asset('build/images/logo.png')}}" alt="logo.png"/></a>
        </div>
        <nav class="row-block row-block_right Header-menu">
          <div class="menuModal" id="navigate">
            <ul class="menu menu_main">
              <li class="menu-item"><a class="menu-link" href="{{ path('app_homepage') }}">Главная</a></li>
              <li class="menu-item"><span class="menu-label menu-label_danger">Hot</span><a class="menu-link" href="{{path('app_homepage')}}">Каталог</a></li>
              <li class="menu-item"><span class="menu-label menu-label_success">New</span><a class="menu-link" href="{{path('app_sale')}}">Скидки</a></li>
              <li class="menu-item"><a class="menu-link" href="{{path('app_contact')}}">Контакты</a></li>
            </ul>
          </div>
        </nav>
        <div class="row-block">
          <div class="CartBlock"><a class="CartBlock-block" href="{{path('app_compare')}}"><img class="CartBlock-img" src="{{asset('build/images/icons/exchange.svg')}}" alt="exchange.svg"/><span class="CartBlock-amount">4</span></a><a class="CartBlock-block" href="{{path('app_cart')}}"><img class="CartBlock-img" src="{{asset('build/images/icons/cart.svg')}}" alt="cart.svg"/><span class="CartBlock-amount">0</span></a>
            <div class="CartBlock-block"><span class="CartBlock-price">0.00$</span>
            </div>
          </div>
        </div>
        <div class="row-block Header-trigger"><a class="menuTrigger" href="#navigate">
            <div class="menuTrigger-content">Показать навигацию
            </div><span></span><span></span><span></span></a>
        </div>
      </div>
    </div>
    <div class="Header-searchWrap">
      <div class="wrap">
        <div class="Header-categories">
          <div class="CategoriesButton">
            <div class="CategoriesButton-title">
              <div class="CategoriesButton-icon"><img src="{{asset('build/images/icons/allDep.svg')}}" alt="allDep.svg"/></div>
              <span class="CategoriesButton-text">Категории</span>
              <div class="CategoriesButton-arrow"></div>
            </div>
            <div class="CategoriesButton-content">
            
            {% for category in categories %}  
              <div class="CategoriesButton-link">
                <form class="category_form" action="{{path('app_catalog')}}" method="post">
                    <div class="CategoriesButton-icon">
                      <img src="{{asset(category.imagepath)}}" alt="{{category.imagepath}}"/>
                    </div>
                      <div class="CategoriesButton-text">
                        <input  type="submit" name="category" value="{{category.category}}">
                      </div> 
                    <a class="CategoriesButton-arrow" href="#"></a>
                </form>
                  {% if category.subCategories %}
                    <div class="CategoriesButton-submenu">
                    {% for subCategory in category.subCategories %}   
                        <form class="category_form" action="{{path('app_catalog')}}" method="post"> 
                          <input type="hidden" value="{{subCategory.subCategory}}">
                          <div class="CategoriesButton-icon">
                            <img src="{{asset(subCategory.imagepath)}}" alt="1.svg"/>
                          </div>
                          <div class="CategoriesButton-text">
                            <input type="submit" name="category" value="{{subCategory.subCategory}}">
                          </div>
                        </form> 
                    {% endfor %}  
                    </div>
                  {% endif %}
              </div>
            {% endfor %}
            </div>
          </div>
        </div>
        <div class="Header-searchLink"><img src="{{asset('build/images/icons/search.svg')}}" alt="search.svg"/>
        </div>
        <div class="Header-search">
          <div class="search">
            <form class="form form_search" action="#" method="post">
              <input class="search-input" id="query" name="query" type="text" placeholder="Найти..."/>
              <button class="search-button" type="submit" name="search" id="search"><img src="{{asset('build/images/icons/search.svg')}}" alt="search.svg"/>Поиск</button>
            </form>
          </div>
        </div>
      </div>
    </div>
{% endblock %}

{% block body %}{% endblock %}

